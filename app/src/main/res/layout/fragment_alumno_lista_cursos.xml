<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfdcdc"
    tools:context=".Fragmentos.AlumnoListaCursosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cursos como alumno"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <SearchView
            android:id="@+id/busqueda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0efef" />

        <ToggleButton
            android:id="@+id/tgBtnFiltroCursos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filtro cursos"
            android:textOff="Todos los cursos"
            android:textOn="Mis cursos" />

        <ListView
            android:id="@+id/lstCursosAlumno"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>